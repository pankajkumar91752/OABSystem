@page
@model OABSystem.Pages.Appointment.IndexModel

@{
    ViewData["Title"] = "List Appointment";
}

<h1>List Appointment</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].HealthcareProfessional.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].AppointmentDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].PatientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].PatientContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment[0].ReasonForAppointment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Appointment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HealthcareProfessional.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PatientContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReasonForAppointment)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AppointmentId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AppointmentId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AppointmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
